doctype html
html(ng-app='kisetsuApp')
  head
    title(ng-bind="title + ' - Kisetsu'")
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    base(href='/')
    meta(charset='utf-8')

    link(rel="shortcut icon" href="/icons/favicon.ico" type="image/x-icon")
    link(href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.7/flatly/bootstrap.min.css", rel="stylesheet", integrity="sha384-+ENW/yibaokMnme+vBLnHMphUYxHs34h9lpdbSLuAwGkOKFRl4C34WkjazBtb7eT", crossorigin="anonymous")
    link(href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css", rel="stylesheet", integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN", crossorigin="anonymous")
    link(rel='stylesheet', href='/stylesheets/sweetalert2.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')

    link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
    link(href="https://fonts.googleapis.com/css?family=Fredoka+One|PT+Sans|Open+Sans|Lato", rel="stylesheet")
  body
    nav(ng-controller="navbarCtrl as vm").navbar.navbar-default.navbar-fixed-top
        .container
            .navbar-header
                button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href='/') 
                    li.fa.fa-leaf 
                    |   Kisetsu
            #navbar.collapse.navbar-collapse
                ul.nav.navbar-nav
                    li(ng-class = "{active: vm.isActive('/')}")
                        a(href='/') 
                            i.fa.fa-tv
                            |  Current Season
                    li(ng-class = "{active: vm.isActive('/ranking')}")
                        a(href='/ranking') 
                            i.fa.fa-trophy
                            |  Ranking


    div(ng-view)
        block content

    div.footer    
      div.container.text-center
            span.text-muted Made with the support of 
                a(href="https://anilist.co") AniList API

  script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js" integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous")
  script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js", integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa", crossorigin="anonymous")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.6.1/angular.min.js" integrity="sha256-3SrLjPeRPa1ofM280r+OMcUjJZKLWJHr6SRtRu3dRb0=" crossorigin="anonymous")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.6.1/angular-route.min.js" integrity="sha256-SUsNyx9Kr9rHA3thrzSefdS883z1Q0ZOLXPF3p2Tt+o=" crossorigin="anonymous")
  script(src='/javascripts/js.cookie.js')
  script(src='/javascripts/sweetalert2.min.js')
  script(src='/javascripts/jinqjs.js')
  script(src='/javascripts/ordinal-browser.js')

  script(src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.17.1/moment.min.js" integrity="sha256-Gn7MUQono8LUxTfRA0WZzJgTua52Udm1Ifrk5421zkA=" crossorigin="anonymous")

  script(src='/app.js')

  script(src='/common/filters/formatRating.filter.js')
  script(src='/common/filters/formatCount.filter.js')

  script(src='/navbar/navbar.controller.js')
